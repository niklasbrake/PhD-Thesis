issn = {00189294},
journal = {IEEE Transactions on Biomedical Engineering},
keywords = {Brain,electro-myographic (EMG),electroencephalographic (EEG),paralysis},
number = {1},
pages = {4--9},
pmid = {22542648},
publisher = {IEEE},
title = {{Surface laplacian of central scalp electrical signals is insensitive to muscle contamination}},
volume = {60},
year = {2013}
}
