journal = {Electroencephalography and Clinical Neurophysiology},
keywords = {Electroencephalogram,Glia,Intracellular,K- complex,Neuron,Oscillations,Slow oscillation},
mendeley-groups = {EEG,Thesis/Chapter2},
number = {2},
pages = {69--83},
pmid = {9751278},
title = {{Electrophysiological correlates of sleep delta waves}},
volume = {107},
year = {1998}
}
