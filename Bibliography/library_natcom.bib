issn = {0270-6474},
journal = {Journal of Neuroscience},
keywords = {1/f,EEG,Electrocorticography,Neural noise,Phase/amplitude coupling,Working memory},
mendeley-groups = {Thesis/Chapter2},
month = {sep},
number = {38},
pages = {13257--13265},
pmid = {26400953},
title = {{Age-Related Changes in 1/f Neural Electrophysiological Noise}},
url = {http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.2332-14.2015},
volume = {35},
