mendeley-groups = {Thesis/Chapter2},
month = {jul},
number = {7},
pages = {e1010272},
title = {{Non-zero mean alpha oscillations revealed with computational model and empirical data}},
url = {https://dx.plos.org/10.1371/journal.pcbi.1010272},
volume = {18},
year = {2022}
}
