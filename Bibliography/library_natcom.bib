file = {:E\:/Research_Projects/004_Propofol/literature//2019 - Colombo et al. - The spectral exponent of the resting EEG indexes the presence of consciousness during unresponsiveness induced b.pdf:pdf},
issn = {10959572},
journal = {NeuroImage},
keywords = {1/F,Anesthesia,Consciousness,E/I,EEG,NCC},
mendeley-groups = {Thesis/Chapter2},
pages = {631--644},
pmid = {30639334},
title = {{The spectral exponent of the resting EEG indexes the presence of consciousness during unresponsiveness induced by propofol, xenon, and ketamine}},
volume = {189},
year = {2019}
}
